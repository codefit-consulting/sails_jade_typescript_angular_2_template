  script.
    System.config({
      map: {
        lodash: 'node_modules/lodash/lodash.js'
      },
      packages: {        
        angular: {
          format: 'register',
          defaultExtension: 'js'
        }
      }
    });
    System.import('angular/homepage/app/main')
          .then(null, console.error.bind(console));


